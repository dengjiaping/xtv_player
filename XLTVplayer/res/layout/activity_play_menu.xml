<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
            android:id="@+id/parent_menu_container"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/play_menu_left_padding"
            android:background="@drawable/menu_bg"
            android:gravity="center_vertical"
            >

        <LinearLayout
                android:id="@+id/subtitle_menu"
                android:orientation="horizontal"
                android:layout_width="@dimen/play_menu_width"
                android:layout_height="@dimen/menu_height"
                android:focusable="true"
                android:gravity="center_vertical"
                android:background="@drawable/menu_item_bg"
                >

            <requestFocus/>

            <ImageView
                    android:id="@+id/subtitle_icon"
                    android:layout_width="@dimen/play_menu_icon_size"
                    android:layout_height="@dimen/play_menu_icon_size"
                    android:src="@drawable/menu_subtitle_bg"
                    android:duplicateParentState="true"
                    />

            <LinearLayout
                    android:id="@+id/subtitle_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:gravity="center">

                <TextView
                        android:id="@+id/subtitle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="字幕"
                        android:textColor="@color/menu_text_color"
                        android:textSize="@dimen/play_menu_text_size"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:duplicateParentState="true"/>

                <ImageView
                        android:id="@+id/arrow_subtitle"
                        android:layout_width="@dimen/play_menu_icon_arrow_width"
                        android:layout_height="@dimen/play_menu_icon_arrow_height"
                        android:src="@drawable/menu_arrow_bg"
                        android:duplicateParentState="true"
                        />
            </LinearLayout>

            <ImageView
                    android:id="@+id/subtitle_left_indicator"
                    android:layout_width="@dimen/play_menu_icon_arrow_width"
                    android:layout_height="@dimen/play_menu_icon_arrow_height"
                    android:src="@drawable/submenu_arrow_bg"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/audio_menu"
                android:orientation="horizontal"
                android:layout_width="@dimen/play_menu_width"
                android:layout_height="@dimen/menu_height"
                android:focusable="true"
                android:gravity="center_vertical"
                android:background="@drawable/menu_item_bg"
                >

            <ImageView
                    android:id="@+id/audio_icon"
                    android:layout_width="@dimen/play_menu_icon_size"
                    android:layout_height="@dimen/play_menu_icon_size"
                    android:src="@drawable/menu_audio_bg"
                    android:duplicateParentState="true"
                    />

            <LinearLayout
                    android:id="@+id/audio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:gravity="center">

                <TextView
                        android:id="@+id/audio_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="音轨"
                        android:textColor="@color/menu_text_color"
                        android:textSize="@dimen/play_menu_text_size"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:duplicateParentState="true"
                        />

                <ImageView
                        android:id="@+id/arrow_audio"
                        android:layout_width="@dimen/play_menu_icon_arrow_width"
                        android:layout_height="@dimen/play_menu_icon_arrow_height"
                        android:src="@drawable/menu_arrow_bg"
                        android:duplicateParentState="true"
                        />
            </LinearLayout>

            <ImageView
                    android:id="@+id/audio_left_indicator"
                    android:layout_width="@dimen/play_menu_icon_arrow_width"
                    android:layout_height="@dimen/play_menu_icon_arrow_height"
                    android:src="@drawable/submenu_arrow_bg"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/display_menu"
                android:orientation="horizontal"
                android:layout_width="@dimen/play_menu_width"
                android:layout_height="@dimen/menu_height"
                android:gravity="center_vertical"
                android:focusable="true"
                android:background="@drawable/menu_item_bg"
                >

            <ImageView
                    android:id="@+id/display_icon"
                    android:layout_width="@dimen/play_menu_icon_size"
                    android:layout_height="@dimen/play_menu_icon_size"
                    android:src="@drawable/menu_display_bg"
                    android:duplicateParentState="true"
                    />

            <LinearLayout
                    android:id="@+id/display_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:gravity="center">

                <TextView
                        android:id="@+id/display_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示"
                        android:textColor="@color/menu_text_color"
                        android:textSize="@dimen/play_menu_text_size"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:duplicateParentState="true"
                        />

                <ImageView
                        android:id="@+id/arrow_display"
                        android:layout_width="@dimen/play_menu_icon_arrow_width"
                        android:layout_height="@dimen/play_menu_icon_arrow_height"
                        android:src="@drawable/menu_arrow_bg"
                        android:duplicateParentState="true"
                        />
            </LinearLayout>

            <ImageView
                    android:id="@+id/display_left_indicator"
                    android:layout_width="@dimen/play_menu_icon_arrow_width"
                    android:layout_height="@dimen/play_menu_icon_arrow_height"
                    android:src="@drawable/submenu_arrow_bg"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/display_menu_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

        <LinearLayout
                android:id="@+id/display_autoajust_menu"
                android:orientation="horizontal"
                android:layout_width="@dimen/play_menu_width"
                android:layout_height="@dimen/submenu_item_height"
                android:focusable="true"
                android:nextFocusLeft="@+id/display_menu"
                android:background="@drawable/menu_item_bg"
                android:gravity="center_vertical"
                >

            <ImageView
                    android:id="@+id/autojust_iv"
                    android:layout_width="@dimen/play_menu_icon_select_size"
                    android:layout_height="@dimen/play_menu_icon_select_size"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/submenu_selected_bg"
                    android:duplicateParentState="true"
                    android:visibility="invisible"
                    />

            <TextView
                    android:id="@+id/autojust_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/play_menu_subtext_size"
                    android:textColor="@color/menu_text_color"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="自适应"
                    android:duplicateParentState="true"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/display_fullscreen_menu"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/submenu_item_height"
                android:focusable="true"
                android:nextFocusLeft="@+id/display_menu"
                android:background="@drawable/menu_item_bg"
                android:gravity="center"
                >

            <ImageView
                    android:id="@+id/fullscreen_iv"
                    android:layout_width="@dimen/play_menu_icon_select_size"
                    android:layout_height="@dimen/play_menu_icon_select_size"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/submenu_selected_bg"
                    android:duplicateParentState="true"
                    android:visibility="invisible"
                    />

            <TextView
                    android:id="@+id/fullscreen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/play_menu_subtext_size"
                    android:textColor="@color/menu_text_color"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="强制全屏"
                    android:duplicateParentState="true"
                    />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/audio_menu_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        <LinearLayout
                android:id="@+id/audio_left_menu"
                android:orientation="horizontal"
                android:layout_width="@dimen/play_menu_width"
                android:layout_height="@dimen/submenu_item_height"
                android:focusable="true"
                android:nextFocusLeft="@+id/audio_menu"
                android:background="@drawable/menu_item_bg"
                android:gravity="center_vertical"
                >

            <ImageView
                    android:id="@+id/leftaudio_iv"
                    android:layout_width="@dimen/play_menu_icon_select_size"
                    android:layout_height="@dimen/play_menu_icon_select_size"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/submenu_selected_bg"
                    android:duplicateParentState="true"
                    android:visibility="invisible"
                    />

            <TextView
                    android:id="@+id/leftaudio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/play_menu_subtext_size"
                    android:textColor="@color/menu_text_color"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="音轨1"
                    android:duplicateParentState="true"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/audio_right_menu"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/submenu_item_height"
                android:focusable="true"
                android:nextFocusLeft="@+id/audio_menu"
                android:background="@drawable/menu_item_bg"
                android:gravity="center_vertical"
                >

            <ImageView
                    android:id="@+id/rightaudio_iv"
                    android:layout_width="@dimen/play_menu_icon_select_size"
                    android:layout_height="@dimen/play_menu_icon_select_size"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/submenu_selected_bg"
                    android:duplicateParentState="true"
                    android:visibility="invisible"
                    />

            <TextView
                    android:id="@+id/rightaudio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/play_menu_subtext_size"
                    android:textColor="@color/menu_text_color"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="音轨2"
                    android:duplicateParentState="true"
                    />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/subtitle_menu_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/play_menu_subtitle_list_height"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="30dp">
        <ListView
                android:id="@+id/subtitle_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:descendantFocusability="blocksDescendants"
                android:listSelector="@android:color/transparent"
                android:cacheColorHint="@android:color/transparent">
        </ListView>
    </LinearLayout>

</RelativeLayout>
