<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/remote_tips_bg"
        android:gravity="center"
        >

    <ImageView
            android:layout_width="@dimen/history_clear_all_alert_icon_width"
            android:layout_height="@dimen/history_clear_all_alert_icon_height"
            android:layout_marginBottom="@dimen/history_clear_all_alert_icon_bottom_margin"
            android:src="@drawable/alert_icon_clear"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/history_clear_all_alert_text_size"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/history_clear_all_alert_icon_bottom_margin"
            android:text="确定清空所有记录吗?"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/remote_unbind_btn_margintop"
            android:orientation="horizontal">
        <RelativeLayout
                android:layout_width="@dimen/history_clear_all_alert_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/remote_unbind_btn_margin">
            <Button
                    android:id="@+id/ok_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/remote_btn_bind_bg">

                <requestFocus/>
            </Button>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/history_clear_all_alert_bt_text_size"
                    android:text="确定"
                    android:textColor="@android:color/white"
                    android:layout_centerInParent="true"
                    />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="@dimen/history_clear_all_alert_bt_width"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/cancel_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/remote_alert_unbind_cancel_bg">
            </Button>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/history_clear_all_alert_text_size"
                    android:text="取消"
                    android:textColor="@android:color/white"
                    android:layout_centerInParent="true"
                    />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>