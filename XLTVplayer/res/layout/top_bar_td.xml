<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/file_explore_top_bar_padding_top"
        android:layout_marginBottom="@dimen/file_explore_top_bar_padding_top"
        android:layout_gravity="left">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/top_bar_iv_width"
            android:layout_height="@dimen/top_bar_iv_height"
            android:layout_marginLeft="29dp"
            android:layout_marginBottom="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_back"
            />

        <!--<View-->
            <!--android:id="@+id/dv"-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_toRightOf="@id/iv"-->
            <!--android:background="#5d5d5d"/>-->

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv"
            android:layout_marginLeft="12dp"
            android:textSize="@dimen/top_bar_title_text_size"
            android:singleLine="true"
            android:maxLength="20"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="@string/main_title"/>


        <ImageView
            android:id="@+id/xunlei_iv"
            android:layout_width="@dimen/actionbar_remote_thunder_iv_size"
            android:layout_height="@dimen/actionbar_remote_thunder_iv_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/xunlei_iv"
            android:textSize="@dimen/top_bar_subtitle_text_size"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/file_explore_top_bar_padding_top"
        android:layout_marginRight="30dp"
        android:layout_gravity="right">

        <ImageView
            android:id="@+id/menu_iv"
            android:layout_width="@dimen/actionbar_remote_menu_iv_size"
            android:layout_height="@dimen/actionbar_remote_menu_iv_size"
            android:layout_centerVertical="true"
            android:src="@drawable/actionbar_menu_icon"
            />

        <TextView
            android:id="@+id/menu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/menu_iv"
            android:textSize="@dimen/top_bar_subtitle_text_size"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="@string/bind_bar_menu_tv"
            />

    </RelativeLayout>



</FrameLayout>